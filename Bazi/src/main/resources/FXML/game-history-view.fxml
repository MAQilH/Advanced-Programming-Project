<?import javafx.scene.control.ListView?>
<Pane prefHeight="600" prefWidth="800" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ir.sharif.view.controllers.GameHistory">

    <VBox alignment="CENTER" prefHeight="600" prefWidth="800.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
        <children>
            <Label text="Game Histories" styleClass="title-label">
            </Label>

            <ScrollPane minHeight="350" prefWidth="Infinity">
                <content>
                    <ListView minHeight="350"  styleClass="transparent-list" fx:id="histories" prefWidth="800">
                    </ListView>
                </content>
            </ScrollPane>

            <Button mnemonicParsing="false" onMouseClicked="#back" text="Back"/>

        </children>
    </VBox>
</Pane>