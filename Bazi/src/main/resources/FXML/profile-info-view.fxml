<?import javafx.scene.layout.Pane?>
<Pane prefHeight="600" prefWidth="800" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ir.sharif.view.controllers.ProfileInfo">

    <VBox alignment="CENTER" prefHeight="600" prefWidth="800.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
        <children>
            <Label text="Profile Info">
                <font>
                    <Font name="Apple Braille" size="43.0" />
                </font>
            </Label>
           <Label fx:id="usernameLabel" />
            <Label fx:id="nicknameLabel" />
            <Label fx:id="maxScoreLabel" />
            <Label fx:id="rankLabelLabel" />
            <Label fx:id="numberOfGamesLabel" />
            <Label fx:id="numberOfWinsLabel" />
            <Label fx:id="numberOfLossesLabel" />
            <Label fx:id="numberOfDrawsLabel" />

            <Label fx:id="errorLabel" styleClass="error-label" />
            <Button mnemonicParsing="false" onMouseClicked="#back" text="Back" />
        </children>
    </VBox>
</Pane>