<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.Pane?>

<Pane prefHeight="600" prefWidth="800" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ir.sharif.view.controllers.Start">

    <VBox alignment="CENTER" prefHeight="600" prefWidth="800" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
        <children>
            <Label text="Bazi" styleClass="title-label">
                <font>
                    <Font name="Apple Braille" size="43.0" />
                </font>
            </Label>

            <Button id="signupButton" mnemonicParsing="false" onMouseClicked="#signupButtonClickListener" prefHeight="52.0" prefWidth="111.0" text="Sign Up"/>
            <Button id="loginButton" mnemonicParsing="false" onMouseClicked="#loginButtonClickListener" prefHeight="52.0" prefWidth="111.0" text="Login" />
            <Button id="playAsGuest" mnemonicParsing="false" onMouseClicked="#exitButtonClickListener" prefHeight="52.0" prefWidth="111.0" text="Exit"/>
        </children>
    </VBox>

</Pane>
